{
	"compilerOptions": {
		"target": "ES2020",
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ES2020"
		],
		"module": "ESNext",
		"moduleResolution": "node",
		"jsx": "react-jsx",
		"strict": true,
		"noEmit": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"outDir": "./dist",
		"baseUrl": "./src",
		"paths": {
			"@/*": [
				"./*"
			]
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}